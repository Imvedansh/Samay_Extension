{
    "manifest_version": 3,
    "name": "Samay",
    "description": "Samay is a time management extension that helps you to manage your time effectively.",
    "version": "1.0.1",
    "icons": {
        "16": "icons/sandglass-16.png",
        "32": "icons/sandglass-32.png",
        "48": "icons/sandglass-48.png",
        "128": "icons/sandglass-128.png"
    },
    "background": {
        "service_worker": "Service.js"
    },
    "action": {
        "default_icon": {
            "16": "icons/sandglass-16.png",
            "32": "icons/sandglass-32.png",
            "48": "icons/sandglass-48.png",
            "128": "icons/sandglass-128.png"
        }
    },
    "permissions": [
        "storage",
        "contextMenus",
        "alarms",
        "notifications"
    ]
}